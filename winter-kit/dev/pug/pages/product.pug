block content
	section.product-view
		.container
			.product-gallery
				ul.js-product-view-slider
					li
						img(src="static/img/content/product-gallery/Big-Product.png", alt="jacket")
					li
						img(src="static/img/content/product-gallery/Big-Product.png", alt="jacket")
					li
						img(src="static/img/content/product-gallery/Big-Product.png", alt="jacket")
				.js-product-view__pager
					a(href="#" data-slide-index="0")
						img(src="static/img/content/product-gallery/pager0.png", alt="")
					a(href="#" data-slide-index="1")
						img(src="static/img/content/product-gallery/pager1.png", alt="")
