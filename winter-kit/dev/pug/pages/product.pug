						ul.chose-size__list
							li  S
							li  M
							li.active  L
							li  XL
					.product__choose-quantity
						span Choose Quantity
						.chose-quantity
							span.quantity-down -
							span.quantity-count 0
							span.quantity-up +
				.product-offer
					.product-price__wrapper
						span Price:
						span.product-price 100$
					.product-actions
						ul.product-item__buttons
							li
								a(href="#").product-item__web
							li
								a(href="#").product-item__buy
